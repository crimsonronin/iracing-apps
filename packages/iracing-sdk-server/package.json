{
    "name": "iracing-apps",
    "productName": "iRacing Apps",
    "version": "0.0.1",
    "contributors": [
        {
            "name": "Josh Stuart",
            "email": "josh.stuart@horizonstate.com"
        }
    ],
    "private": true,
    "homepage": "./",
    "main": "packages/iracing-sdk-server/src/electron.js",
    "scripts": {
        "start": "nf start -p 3000",
        "start:dev": "node scripts/start.js",
        "build": "node scripts/build.js",
        "electron:dev": "electron .",
        "electron:start": "node packages/iracing-sdk-server/src/electron-wait-react",
        "test": "node scripts/test.js --env=jsdom",
        "test:lint": "eslint \\\"packages/iracing-sdk-server/src/**/*.{js,jsx}\\\"",
        "format": "./node_modules/.bin/prettier --write \\\"packages/iracing-sdk-server/src/**/*.{js,jsx,json,css,md}\\\"",
        "precommit": "lint-staged",
        "lint": "yarn test:lint",
        "package:win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"iRacing Apps\""
    },
    "dependencies": {
        "@material-ui/core": "1.3.0",
        "@material-ui/icons": "1.1.0",
        "autoprefixer": "7.1.6",
        "babel-core": "6.26.0",
        "babel-eslint": "8.2.3",
        "babel-jest": "23.0.1",
        "babel-loader": "7.1.2",
        "babel-preset-react-app": "3.1.1",
        "babel-runtime": "6.26.0",
        "case-sensitive-paths-webpack-plugin": "2.1.1",
        "chalk": "1.1.3",
        "css-loader": "0.28.7",
        "csstype": "2.5.2",
        "dotenv": "4.0.0",
        "dotenv-expand": "4.2.0",
        "eslint": "4.19.1",
        "eslint-config-react-app": "2.1.0",
        "eslint-loader": "2.0.0",
        "eslint-plugin-import": "2.8.0",
        "eslint-plugin-jest": "21.17.0",
        "eslint-plugin-jsx-a11y": "5.1.1",
        "extract-text-webpack-plugin": "3.0.2",
        "file-loader": "1.1.5",
        "fs-extra": "3.0.1",
        "html-webpack-plugin": "2.29.0",
        "jest": "23.1.0",
        "lodash": "4.17.10",
        "object-assign": "4.1.1",
        "postcss-flexbugs-fixes": "3.2.0",
        "postcss-loader": "2.0.8",
        "promise": "8.0.1",
        "raf": "3.4.0",
        "react": "16.3.2",
        "react-dev-utils": "5.0.1",
        "react-dom": "16.3.2",
        "react-redux": "^5.0.7",
        "react-router-dom": "4.2.2",
        "redux": "^4.0.0",
        "redux-thunk": "^2.3.0",
        "resolve": "1.6.0",
        "style-loader": "0.19.0",
        "svgs": "3.2.1",
        "sw-precache-webpack-plugin": "0.11.4",
        "url-loader": "0.6.2",
        "webpack": "3.8.1",
        "webpack-dev-server": "2.9.4",
        "webpack-manifest-plugin": "1.3.2",
        "whatwg-fetch": "2.0.3"
    },
    "description": "A boilerplate/skeleton for react projects",
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,mjs}",
            "!src/**/fixtures/*.{js,jsx,mjs}"
        ],
        "setupFiles": [
            "<rootDir>/config/polyfills.js",
            "<rootDir>/node_modules/jest-canvas-mock"
        ],
        "testRegex": "src/.*(/__tests__/.*|(\\.|/)(test|spec))\\.jsx?$",
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
            "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
            "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
        },
        "transformIgnorePatterns": [
            "node_modules/(?!(react-native-web|react-native-web-linear-gradient)/)"
        ],
        "moduleNameMapper": {
            "^src/(.*)$": "<rootDir>/src/$1",
            "^react-native$": "react-native-web",
            "^react-native-linear-gradient$": "react-native-web-linear-gradient",
            "^react-native-svg$": "svgs"
        },
        "moduleFileExtensions": [
            "web.js",
            "js",
            "json",
            "web.jsx",
            "jsx",
            "node",
            "mjs"
        ]
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "devDependencies": {
        "babel-preset-react-native": "4.0.0",
        "copy-webpack-plugin": "4.5.1",
        "dom-testing-library": "2.3.2",
        "electron": "^2.0.5",
        "electron-packager": "^12.1.0",
        "eslint-config-airbnb": "16.1.0",
        "eslint-config-prettier": "2.9.0",
        "eslint-import-resolver-webpack": "0.10.0",
        "eslint-plugin-react": "7.9.1",
        "foreman": "^3.0.1",
        "jest-canvas-mock": "1.0.2",
        "lint-staged": "7.1.2",
        "prettier": "1.12.1",
        "react-testing-library": "3.1.3",
        "redux-devtools-extension": "^2.13.5",
        "redux-logger": "^3.0.6",
        "webpack-bundle-analyzer": "^2.13.1",
        "yargs": "11.0.0"
    },
    "lint-staged": {
        "*.{js,json,css,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "engines": {
        "node": ">=9"
    }
}
